<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable
			name="view"
			type="com.strv.mlyko.kitchensink.ui.main.MainView" />

		<variable
			name="viewModel"
			type="com.strv.mlyko.kitchensink.ui.main.MainViewModel" />
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/textView"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="hello android fragment"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_chainStyle="packed"
			app:layout_constraintBottom_toTopOf="@+id/button" />

		<Button
			android:id="@+id/button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Authenticate"
			android:onClick="@{() -> view.onNextClick()}"
			app:layout_constraintTop_toBottomOf="@+id/textView"
			app:layout_constraintBottom_toBottomOf="parent" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="8dp"
			android:text="@{@string/button_count(viewModel.counter)}"
			tools:text="@string/button_count"
			app:layout_constraintEnd_toStartOf="@+id/floatingActionButton"
			app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton"
			app:layout_constraintTop_toTopOf="@+id/floatingActionButton" />

		<com.google.android.material.floatingactionbutton.FloatingActionButton
			android:id="@+id/floatingActionButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="16dp"
			android:src="@drawable/ic_baseline_plus_one_24"
			android:onClick="@{() -> viewModel.onPlusClick()}"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" />

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>